<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.taobao.android.game2.main.MainActivity" >

    <Button
        android:id="@+id/btnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动服务！！！" />

    <Button
        android:id="@+id/btnRegReceiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册广播" />

    <Button
        android:id="@+id/btnUnRegReceiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消注册" />

    <Button
        android:id="@+id/btnSendDY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送动态注册广播" />

    <Button
        android:id="@+id/btnSendSTATIC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送静态广播" />

    <Button
        android:id="@+id/btnStartAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动另一个activity" />

</LinearLayout>